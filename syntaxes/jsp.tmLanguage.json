{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Jakarta Server Pages",
    "fileTypes": ["jsp", "jspf", "tag"],
    "scopeName": "source.jsp",
    "patterns": [
        { "include": "#comment" },
        { "include": "#scriptlet" },
        { "include": "#expression" },
        { "include": "text.xml" },
        { "include": "text.html.basic" }
    ],
    "injections": {
        "string.quoted.double -meta.embedded.block.java -source.js, string.quoted.single -meta.embedded.block.java -source.js": {
            "patterns": [{ "include": "source.jsp" }],
            "comment": "allow all expression inside of quotes"
        },
        "meta.tag.xml -meta.embedded.block.java, L:meta.var.expr.js": {
            "patterns": [{ "include": "#scriptlet" }],
            "comment": "allow scriptlets within xml and javascript"
        }
    },
    "repository": {
        "comment": {
            "name": "comment.block.jsp",
            "begin": "<%--",
            "end": "--%>"
        },
        "scriptlet": {
            "name": "meta.tag.xml",
            "contentName": "meta.embedded.block.java",
            "begin": "(<)(%)",
            "end": "(%)(>)",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.xml" },
                "2": { "name": "entity.name.tag.xml" }
            },
            "endCaptures": {
                "1": { "name": "entity.name.tag.xml" },
                "2": { "name": "punctuation.definition.tag.xml" }
            },
            "patterns": [
                {
                    "match": "\\{\\s*((?=%>)|$)",
                    "comment": "consume trailing curly brackets for fragmented scriptlets"
                },
                { "include": "source.java" }
            ]
        },
        "expression": {
            "name": "string.template.jsp",
            "contentName": "meta.embedded.block.java",
            "begin": "\\$\\{",
            "end": "\\}",
            "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.jsp" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.jsp" }
            },
            "patterns": [
                { "match": "\\\\.", "name": "constant.character.escape.jsp" },
                { "include": "source.java" }
            ]
        }
    }
}
