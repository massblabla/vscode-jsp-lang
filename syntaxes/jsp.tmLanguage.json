{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Jakarta Server Pages",
    "fileTypes": ["jsp", "jspf", "tag"],
    "scopeName": "source.jsp",
    "patterns": [
        { "include": "#comment" },
        { "include": "#directive" },
        { "include": "#scriptlet" },
        { "include": "#expression" },
        { "include": "text.html.derivative" }
    ],
    "injections": {
        "L:meta -meta.embedded.block.scriptlet.jsp": {
            "patterns": [
                { "include": "#scriptlet" }
            ],
            "comment": "allow scriptlets most anywhere"
        },
        "L:(string.quoted.single.html | string.quoted.double.html) -meta.embedded.block": {
            "patterns": [
                { "include": "#expression" },
                { "include": "text.xml" }
            ],
            "comment": "also allow expressions and tags within xml strings"
        }
    },
    "repository": {
        "comment": {
            "name": "comment.block.jsp",
            "begin": "<%--",
            "end": "--%>"
        },
        "directive": {
            "name": "meta.tag.jsp",
            "begin": "(<)(%@)",
            "end": "(%)(>)",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.jsp" },
                "2": { "name": "entity.name.tag.jsp" }
            },
            "endCaptures": {
                "1": { "name": "entity.name.tag.jsp" },
                "2": { "name": "punctuation.definition.tag.jsp" }
            },
            "patterns": [
                {
                    "match": "(page|include|taglib)",
                    "name": "keyword.control.directive.jsp"
                },
                {
                    "match": "(\\S+)((?=\\s*=))",
                    "name": "entity.other.attribute-name.localname.jsp"
                },
                {
                    "name": "string.quoted.double.jsp",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        { "include": "#escape" }
                    ]
                }
            ]
        },
        "scriptlet": {
            "name": "meta.tag.jsp",
            "contentName": "meta.embedded.block.scriptlet.jsp meta.embedded.block.java",
            "begin": "(<)(%[\\s!=])",
            "end": "(%)(>)",
            "beginCaptures": {
                "1": { "name": "punctuation.definition.tag.jsp" },
                "2": { "name": "entity.name.tag.jsp" }
            },
            "endCaptures": {
                "1": { "name": "entity.name.tag.jsp" },
                "2": { "name": "punctuation.definition.tag.jsp" }
            },
            "patterns": [
                {
                    "match": "\\{(?=\\s*(%>|$))",
                    "comment": "consume trailing curly brackets for fragmented scriptlets"
                },
                { "include": "source.java" }
            ]
        },
        "expression": {
            "name": "string.template.jsp",
            "contentName": "meta.embedded.block.expression.jsp meta.embedded.block.java",
            "begin": "\\$\\{",
            "end": "\\}",
            "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.jsp" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.jsp" }
            },
            "patterns": [
                { "include": "#escape" },
                { "include": "source.java" }
            ]
        },
        "escape": {
            "match": "\\\\.",
            "name": "constant.character.escape.jsp"
        }
    }
}
